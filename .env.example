# PostgreSQL Database
POSTGRES_DB=ventia_db
POSTGRES_USER=ventia_user
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_PORT=5432

# Backend
BACKEND_PORT=8000
DATABASE_URL=postgresql://ventia_user:your_secure_password_here@localhost:5432/ventia_db
ENVIRONMENT=development
LOG_LEVEL=info
CORS_ORIGINS=["http://localhost:3000"]

# Security (IMPORTANT: Change in production!)
SECRET_KEY=your-secret-key-for-encryption-CHANGE-IN-PRODUCTION

# Auth0
AUTH0_DOMAIN=your-tenant.auth0.com
AUTH0_AUDIENCE=https://your-api-identifier
AUTH0_ISSUER=https://your-tenant.auth0.com/
AUTH0_ALGORITHM=RS256

# Auth0 Management API (para crear/actualizar usuarios)
AUTH0_MANAGEMENT_CLIENT_ID=your_management_client_id
AUTH0_MANAGEMENT_CLIENT_SECRET=your_management_client_secret
AUTH0_MANAGEMENT_AUDIENCE=https://your-tenant.auth0.com/api/v2/
# Auth0 Connection (base de datos de usuarios - REQUERIDO)
AUTH0_CONNECTION=Username-Password-Authentication

# eFact-OSE (Facturación Electrónica SUNAT - Perú)
# Base URL del servicio eFact-OSE
EFACT_BASE_URL=https://ose-gw1.efact.pe:443/api-efact-ose
# RUC de Ventia (usado como username en OAuth2)
EFACT_RUC_VENTIA=your_ventia_ruc_here
# Password REST de Ventia para autenticación OAuth2
EFACT_PASSWORD_REST=your_efact_password_here
# Duración del cache del token OAuth2 en horas (eFact tokens duran 12 horas, se recomienda 11)
EFACT_TOKEN_CACHE_HOURS=1

# Resend (Email Service)
# API key de Resend para envío de emails (obtener en: https://resend.com/api-keys)
RESEND_API_KEY=re_your_resend_api_key_here
# Email desde el cual se enviarán las facturas (debe ser un dominio verificado en Resend)
RESEND_FROM_EMAIL=noreply@ventia.pe
# Nombre del remitente que aparecerá en los emails
RESEND_FROM_NAME=VentIA - Facturación

# Frontend
FRONTEND_PORT=3000
NEXT_PUBLIC_API_URL=http://localhost:8000/api/v1

# Auth0 Frontend
NEXT_PUBLIC_AUTH0_DOMAIN=your-tenant.auth0.com
NEXT_PUBLIC_AUTH0_CLIENT_ID=your-client-id
NEXT_PUBLIC_AUTH0_AUDIENCE=https://your-api-identifier
AUTH0_CLIENT_SECRET=your-client-secret
AUTH0_SECRET=use-openssl-rand-hex-32-to-generate

# IMPORTANT NOTES:
# - Shopify credentials are NOT here - they are stored per-tenant in the database
# - Each tenant (company) has their own Shopify store credentials in the 'tenants' table
# - Use 'openssl rand -hex 32' to generate AUTH0_SECRET
# - Change all passwords and secrets before deploying to production

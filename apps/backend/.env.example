# Database
DATABASE_URL=postgresql://ventia_user:ventia_password_dev@localhost:5432/ventia_db

# Environment
ENVIRONMENT=development
LOG_LEVEL=info

# CORS
CORS_ORIGINS=["http://localhost:3000"]

# Security (IMPORTANT: Change in production!)
SECRET_KEY=your-secret-key-for-encryption-CHANGE-IN-PRODUCTION

# Auth0
AUTH0_DOMAIN=your-tenant.auth0.com
AUTH0_AUDIENCE=https://your-api-identifier
AUTH0_ISSUER=https://your-tenant.auth0.com/
AUTH0_ALGORITHM=RS256

# IMPORTANT NOTES:
# - Shopify credentials are NOT in .env - they are stored per-tenant in the database
# - Each tenant (company) has their own Shopify store credentials in the 'tenants' table
# - Use 'openssl rand -hex 32' to generate SECRET_KEY
# - Get Auth0 public keys from: https://{AUTH0_DOMAIN}/.well-known/jwks.json
